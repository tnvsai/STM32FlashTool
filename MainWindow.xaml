<Window x:Class="STM32Bootloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="STM32 FlashTool" Height="600" Width="800"
        Icon="pack://application:,,,/logo.ico"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        AllowDrop="True" DragOver="Window_DragOver" Drop="Window_Drop"
        Background="{DynamicResource AppBackgroundBrush}" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <!-- Theme Brushes (Default Light) -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F3F3F3"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#333333"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#666666"/>
        <SolidColorBrush x:Key="BorderBrush" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="HeaderBackgroundBrush" Color="#005A9E"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ControlBorderBrush" Color="#D0D0D0"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#0078D7"/>

        <!-- Toggle Switch Style -->
        <Style x:Key="ThemeToggleStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Width="40" Height="20" CornerRadius="10" Background="{DynamicResource ControlBorderBrush}">
                            <Grid>
                                <Ellipse x:Name="Dot" Width="16" Height="16" Fill="White" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Dot" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Dot" Property="Margin" Value="0,0,2,0"/>
                                <Setter TargetName="Dot" Property="Fill" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CC1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="border" Property="Background" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Utility Button Style (Small) -->
        <Style x:Key="UtilityButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Custom ScrollBar -->
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb>
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{DynamicResource ControlBorderBrush}" CornerRadius="5"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBox Helper Templates (Must process before ComboBox Style) -->
        <ControlTemplate x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="20" />
                </Grid.ColumnDefinitions>
                <Border x:Name="Border" Grid.ColumnSpan="2" CornerRadius="4" Background="{DynamicResource ControlBackgroundBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" />
                <Path x:Name="Arrow" Grid.Column="1" Fill="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
            </Grid>
        </ControlTemplate>

        <ControlTemplate x:Key="ComboBoxTextBox" TargetType="TextBox">
            <Border x:Name="PART_ContentHost" Focusable="False" Background="{TemplateBinding Background}" />
        </ControlTemplate>

        <!-- Custom ComboBox -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource ControlBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorderBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="6,3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton" Template="{StaticResource ComboBoxToggleButton}" Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" ClickMode="Press"/>
                            <ContentPresenter Name="ContentSite" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="6,3,23,3" VerticalAlignment="Center" HorizontalAlignment="Left" />
                            <TextBox x:Name="PART_EditableTextBox" Style="{x:Null}" Template="{StaticResource ComboBoxTextBox}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="3,3,23,3" Focusable="True" Background="Transparent" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="{DynamicResource ControlBackgroundBrush}" BorderThickness="1" BorderBrush="{DynamicResource ControlBorderBrush}"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="#888888"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Background="{DynamicResource AppBackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>
        
        <!-- Read Memory Popup -->
        <Popup x:Name="ReadMemoryPopup" PlacementTarget="{Binding ElementName=ReadMemoryBtn}" Placement="Bottom" AllowsTransparency="True" StaysOpen="False">
            <Border Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" Padding="20" MinWidth="500" Margin="0,5,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="Black" Opacity="0.3" BlurRadius="15" ShadowDepth="5"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Title with Close Button -->
                    <Grid Grid.Row="0">
                        <TextBlock Text="Read Memory" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                        <Button Content="âœ•" Width="25" Height="25" HorizontalAlignment="Right" VerticalAlignment="Center" 
                                Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextSecondaryBrush}" 
                                FontSize="16" Padding="0" Click="CloseReadMemoryPopup_Click" Cursor="Hand">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="{DynamicResource ControlBorderBrush}"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    
                    <!-- Input Row -->
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="100"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Address" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBox Grid.Column="1" x:Name="ReadAddressBox" Text="0x08008000" Height="30" VerticalContentAlignment="Center" Padding="8,0" Background="{DynamicResource ControlBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" FontFamily="Consolas"/>
                        
                        <TextBlock Grid.Column="3" Text="Length" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <ComboBox Grid.Column="4" x:Name="ReadLengthBox" Height="30" SelectedIndex="2" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="16"/>
                            <ComboBoxItem Content="32"/>
                            <ComboBoxItem Content="64"/>
                            <ComboBoxItem Content="128"/>
                        </ComboBox>
                    </Grid>
                    
                    <!-- Read Button -->
                    <Button Grid.Row="4" x:Name="ReadMemoryExecuteBtn" Content="Read" Height="35" Width="100" HorizontalAlignment="Left" Style="{StaticResource PrimaryButton}" Click="ReadMemoryExecuteBtn_Click"/>
                    
                    <!-- Output Display -->
                    <Border Grid.Row="6" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Background="{DynamicResource AppBackgroundBrush}" Height="200" MinWidth="450">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="ReadMemoryOutput" Text="" Padding="10" FontFamily="Consolas" FontSize="11" Foreground="{DynamicResource TextPrimaryBrush}" TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </Popup>

        <!-- Top Header Bar -->
        <Border Grid.Row="0" Background="{DynamicResource HeaderBackgroundBrush}" Height="50" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center" Margin="0" Orientation="Horizontal">
                    <Image Source="pack://application:,,,/logo.ico" Width="32" Height="32" Margin="0,0,15,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="STM32" FontWeight="Bold" FontSize="20" Foreground="White"/>
                            <TextBlock Text=" FlashTool v1.0" FontWeight="Light" FontSize="20" Foreground="#E0E0E0"/>
                        </StackPanel>
                        <TextBlock Text="Developed by tnvsai" FontSize="10" Foreground="White" Opacity="0.5" Margin="2,-2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Status & Theme Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸŒ™" VerticalAlignment="Center" Margin="0,0,5,0" FontSize="14" Foreground="White" Opacity="0.7"/>
                    <ToggleButton x:Name="ThemeToggle" Style="{StaticResource ThemeToggleStyle}" Margin="0,0,15,0" Click="ThemeToggle_Click" ToolTip="Toggle Dark Mode"/>

                    <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" Padding="12,4" VerticalAlignment="Center">
                         <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" x:Name="StatusDot" Fill="#CCC" Margin="0,0,6,0"/>
                            <TextBlock x:Name="StatusText" Text="Disconnected" FontWeight="SemiBold" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Scroller -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/> <!-- Config Card -->
                     <RowDefinition Height="Auto"/> <!-- Progress -->
                     <RowDefinition Height="*"/>    <!-- Logs -->
                </Grid.RowDefinitions>

                <!-- Configuration & Actions Card -->
                <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Settings Row -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Port" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="1" x:Name="PortComboBox" Height="30" VerticalContentAlignment="Center"/>

                            <TextBlock Grid.Column="3" Text="Baud" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <ComboBox Grid.Column="4" x:Name="BaudComboBox" Height="30" SelectedIndex="1" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="115200"/>
                                <ComboBoxItem Content="230400"/>
                                <ComboBoxItem Content="460800"/>
                                <ComboBoxItem Content="921600"/>
                            </ComboBox>

                            <Button Grid.Column="6" x:Name="RefreshBtn" Content="âŸ³" ToolTip="Refresh Ports" Width="30" Height="30" Style="{StaticResource ModernButton}" Click="RefreshBtn_Click" Padding="0"/>
                            
                            <Button Grid.Column="8" x:Name="ConnectBtn" Content="Connect" Height="30" Style="{StaticResource ModernButton}" Click="ConnectBtn_Click" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <!-- Firmware Row -->
                        <Grid Grid.Row="2">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Firmware" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <Border Grid.Column="1" BorderBrush="{DynamicResource ControlBorderBrush}" BorderThickness="1" CornerRadius="4" Background="{DynamicResource AppBackgroundBrush}" Height="34">
                                <TextBlock x:Name="FilePathText" Text="Drag &amp; drop .bin file here..." VerticalAlignment="Center" Margin="10,0" Foreground="{DynamicResource TextSecondaryBrush}" TextTrimming="CharacterEllipsis" FontStyle="Italic"/>
                            </Border>
                            <Button Grid.Column="3" x:Name="BrowseBtn" Content="Browse..." Height="34" Width="100" Style="{StaticResource ModernButton}" Click="BrowseBtn_Click"/>
                        </Grid>

                        <!-- Actions Row -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="2*"/> <!-- Flash is bigger -->
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="EraseBtn" Content="Erase" Height="40" Style="{StaticResource ModernButton}" Click="EraseBtn_Click" IsEnabled="False"/>
                            <Button Grid.Column="2" x:Name="FlashBtn" Content="âš¡ Flash Firmware" Height="40" Style="{StaticResource PrimaryButton}" Click="FlashBtn_Click" IsEnabled="False" FontSize="14"/>
                            <ComboBox Grid.Column="4" x:Name="JumpComboBox" Height="40" VerticalContentAlignment="Center" SelectionChanged="JumpComboBox_SelectionChanged" IsEnabled="False">
                                <ComboBoxItem Content="Jump to Application"/>
                                <ComboBoxItem Content="Jump to Bootloader"/>
                            </ComboBox>
                            <Button Grid.Column="6" x:Name="ReadMemoryBtn" Content="Read Memory" Height="40" Style="{StaticResource ModernButton}" Click="ReadMemoryBtn_Click" IsEnabled="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Progress Section -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock x:Name="DetailsText" Text="" FontSize="12" Foreground="#0078D7" HorizontalAlignment="Left" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ProgressText" Text="Ready to start" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="FlashProgressBar" Grid.Row="1" Height="6" BorderThickness="0" Background="{DynamicResource ControlBorderBrush}" Foreground="#0078D7"/>
                </Grid>

                <!-- Logs Split -->
                <Grid Grid.Row="2" Height="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Serial Monitor Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!-- Monitor Header -->
                            <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Background="{DynamicResource AppBackgroundBrush}" CornerRadius="6,6,0,0">
                                <DockPanel Margin="10,0" LastChildFill="False">
                                    <TextBlock Text="Serial Monitor" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <Button Content="Copy" Margin="0,0,5,0" Style="{StaticResource UtilityButton}" Click="CopyMonitor_Click"/>
                                        <Button Content="Clear" Style="{StaticResource UtilityButton}" Click="ClearMonitor_Click"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>

                            <!-- Monitor Content -->
                            <ScrollViewer Grid.Row="1" x:Name="MonitorScroll" VerticalScrollBarVisibility="Auto" Background="{DynamicResource CardBackgroundBrush}">
                                <TextBox x:Name="MonitorText" TextWrapping="Wrap" Margin="10" FontFamily="Consolas" FontSize="12" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="{DynamicResource TextPrimaryBrush}"/>
                            </ScrollViewer>
                            
                            <!-- Monitor Footer -->
                            <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Background="{DynamicResource AppBackgroundBrush}" CornerRadius="0,0,6,6">
                                <CheckBox x:Name="MonitorAutoScroll" Content="Auto-scroll" IsChecked="True" VerticalAlignment="Center" Margin="10,0" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Activity Log Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorder}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!-- Log Header -->
                             <Border Grid.Row="0" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,0,1" Background="{DynamicResource AppBackgroundBrush}" CornerRadius="6,6,0,0">
                                <DockPanel Margin="10,0" LastChildFill="False">
                                    <TextBlock Text="Activity Log" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimaryBrush}"/>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <Button Content="Copy" Margin="0,0,5,0" Style="{StaticResource UtilityButton}" Click="CopyLog_Click"/>
                                        <Button Content="Clear" Style="{StaticResource UtilityButton}" Click="ClearLog_Click"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>

                            <!-- Log Content -->
                            <RichTextBox Grid.Row="1" x:Name="LogRichText" Margin="0" FontFamily="Consolas" FontSize="12" IsReadOnly="True" BorderThickness="0" Background="{DynamicResource CardBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PagePadding="10">
                                    <Paragraph Margin="0">
                                        <Run Text="Ready..."/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>

                             <!-- Log Footer -->
                            <Border Grid.Row="2" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0" Background="{DynamicResource AppBackgroundBrush}" CornerRadius="0,0,6,6">
                                <CheckBox x:Name="LogAutoScroll" Content="Auto-scroll" IsChecked="True" VerticalAlignment="Center" Margin="10,0" FontSize="11" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
