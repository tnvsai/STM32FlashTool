<Window x:Class="STM32Bootloader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="STM32 FlashTool" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="CanResize"
        Background="#F3F3F3" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#D0D0D0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="#B0B0B0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.6"/>
                                <Setter TargetName="border" Property="Background" Value="#F9F9F9"/>
                                <Setter Property="Cursor" Value="Arrow"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Primary Action Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#006CC1"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                <Setter TargetName="border" Property="Background" Value="#0078D7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Utility Button Style (Small) -->
        <Style x:Key="UtilityButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Padding" Value="8,2"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Direction="270" ShadowDepth="1" Opacity="0.05" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="*"/>    <!-- Content -->
        </Grid.RowDefinitions>

        <!-- Top Header Bar -->
        <Border Grid.Row="0" Background="#005A9E" Height="50" Padding="20,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel VerticalAlignment="Center" Margin="0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="STM32" FontWeight="Bold" FontSize="20" Foreground="White"/>
                        <TextBlock Text=" FlashTool v1.0" FontWeight="Light" FontSize="20" Foreground="#E0E0E0"/>
                    </StackPanel>
                    <TextBlock Text="Developed by tnvsai" FontSize="10" Foreground="White" Opacity="0.5" Margin="2,-2,0,0"/>
                </StackPanel>

                <!-- Status Indicator -->
                <Border Grid.Column="2" Background="White" CornerRadius="12" Padding="12,4" VerticalAlignment="Center">
                     <StackPanel Orientation="Horizontal">
                        <Ellipse Width="8" Height="8" x:Name="StatusDot" Fill="#CCC" Margin="0,0,6,0"/>
                        <TextBlock x:Name="StatusText" Text="Disconnected" FontWeight="SemiBold" FontSize="12" Foreground="#555"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>

        <!-- Main Content Scroller -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                     <RowDefinition Height="Auto"/> <!-- Config Card -->
                     <RowDefinition Height="Auto"/> <!-- Progress -->
                     <RowDefinition Height="*"/>    <!-- Logs -->
                </Grid.RowDefinitions>

                <!-- Configuration & Actions Card -->
                <Border Grid.Row="0" Style="{StaticResource CardBorder}" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Settings Row -->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="140"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="120"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Port" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
                            <ComboBox Grid.Column="1" x:Name="PortComboBox" Height="30" VerticalContentAlignment="Center"/>

                            <TextBlock Grid.Column="3" Text="Baud" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
                            <ComboBox Grid.Column="4" x:Name="BaudComboBox" Height="30" SelectedIndex="1" VerticalContentAlignment="Center">
                                <ComboBoxItem Content="115200"/>
                                <ComboBoxItem Content="230400"/>
                                <ComboBoxItem Content="460800"/>
                                <ComboBoxItem Content="921600"/>
                            </ComboBox>

                            <Button Grid.Column="6" x:Name="RefreshBtn" Content="⟳" ToolTip="Refresh Ports" Width="30" Height="30" Style="{StaticResource ModernButton}" Click="RefreshBtn_Click" Padding="0"/>
                            
                            <Button Grid.Column="8" x:Name="ConnectBtn" Content="Connect" Height="30" Style="{StaticResource ModernButton}" Click="ConnectBtn_Click" FontWeight="SemiBold"/>
                        </Grid>
                        
                        <!-- Firmware Row -->
                        <Grid Grid.Row="2">
                             <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0" Text="Firmware" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#666"/>
                            <Border Grid.Column="1" BorderBrush="#DDD" BorderThickness="1" CornerRadius="4" Background="#FAFAFA" Height="34">
                                <TextBlock x:Name="FilePathText" Text="Drag &amp; drop .bin file here..." VerticalAlignment="Center" Margin="10,0" Foreground="#999" TextTrimming="CharacterEllipsis" FontStyle="Italic"/>
                            </Border>
                            <Button Grid.Column="3" x:Name="BrowseBtn" Content="Browse..." Height="34" Width="100" Style="{StaticResource ModernButton}" Click="BrowseBtn_Click"/>
                        </Grid>

                        <!-- Actions Row -->
                        <Grid Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="1.5*"/> <!-- Flash is bigger -->
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" x:Name="EraseBtn" Content="Erase" Height="40" Style="{StaticResource ModernButton}" Click="EraseBtn_Click" IsEnabled="False"/>
                            <Button Grid.Column="2" x:Name="FlashBtn" Content="⚡ Flash Firmware" Height="40" Style="{StaticResource PrimaryButton}" Click="FlashBtn_Click" IsEnabled="False" FontSize="14"/>
                            <Button Grid.Column="4" x:Name="JumpBtn" Content="Jump" Height="40" Style="{StaticResource ModernButton}" Click="JumpBtn_Click" IsEnabled="False"/>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Progress Section -->
                <Grid Grid.Row="1" Margin="0,0,0,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Margin="0,0,0,5">
                        <TextBlock x:Name="DetailsText" Text="" FontSize="12" Foreground="#0078D7" HorizontalAlignment="Left" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ProgressText" Text="Ready to start" FontSize="12" Foreground="#666" HorizontalAlignment="Right"/>
                    </Grid>
                    <ProgressBar x:Name="FlashProgressBar" Grid.Row="1" Height="6" BorderThickness="0" Background="#E0E0E0" Foreground="#0078D7"/>
                </Grid>

                <!-- Logs Split -->
                <Grid Grid.Row="2" Height="250">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Serial Monitor Card -->
                    <Border Grid.Column="0" Style="{StaticResource CardBorder}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!-- Monitor Header -->
                            <Border Grid.Row="0" BorderBrush="#EEE" BorderThickness="0,0,0,1" Background="#FAFAFA" CornerRadius="6,6,0,0">
                                <DockPanel Margin="10,0" LastChildFill="False">
                                    <TextBlock Text="Serial Monitor" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#444"/>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <Button Content="Copy" Margin="0,0,5,0" Style="{StaticResource UtilityButton}" Click="CopyMonitor_Click"/>
                                        <Button Content="Clear" Style="{StaticResource UtilityButton}" Click="ClearMonitor_Click"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>

                            <!-- Monitor Content -->
                            <ScrollViewer Grid.Row="1" x:Name="MonitorScroll" VerticalScrollBarVisibility="Auto" Background="White">
                                <TextBox x:Name="MonitorText" TextWrapping="Wrap" Margin="10" FontFamily="Consolas" FontSize="12" IsReadOnly="True" BorderThickness="0" Background="Transparent" Foreground="#333"/>
                            </ScrollViewer>
                            
                            <!-- Monitor Footer -->
                            <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="0,1,0,0" Background="#FAFAFA" CornerRadius="0,0,6,6">
                                <CheckBox x:Name="MonitorAutoScroll" Content="Auto-scroll" IsChecked="True" VerticalAlignment="Center" Margin="10,0" FontSize="11" Foreground="#666"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Activity Log Card -->
                    <Border Grid.Column="2" Style="{StaticResource CardBorder}" Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>

                            <!-- Log Header -->
                             <Border Grid.Row="0" BorderBrush="#EEE" BorderThickness="0,0,0,1" Background="#FAFAFA" CornerRadius="6,6,0,0">
                                <DockPanel Margin="10,0" LastChildFill="False">
                                    <TextBlock Text="Activity Log" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#444"/>
                                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                                        <Button Content="Copy" Margin="0,0,5,0" Style="{StaticResource UtilityButton}" Click="CopyLog_Click"/>
                                        <Button Content="Clear" Style="{StaticResource UtilityButton}" Click="ClearLog_Click"/>
                                    </StackPanel>
                                </DockPanel>
                            </Border>

                            <!-- Log Content -->
                            <RichTextBox Grid.Row="1" x:Name="LogRichText" Margin="0" FontFamily="Consolas" FontSize="12" IsReadOnly="True" BorderThickness="0" Background="White" VerticalScrollBarVisibility="Auto">
                                <FlowDocument PagePadding="10">
                                    <Paragraph Margin="0">
                                        <Run Text="Ready..."/>
                                    </Paragraph>
                                </FlowDocument>
                            </RichTextBox>

                             <!-- Log Footer -->
                            <Border Grid.Row="2" BorderBrush="#EEE" BorderThickness="0,1,0,0" Background="#FAFAFA" CornerRadius="0,0,6,6">
                                <CheckBox x:Name="LogAutoScroll" Content="Auto-scroll" IsChecked="True" VerticalAlignment="Center" Margin="10,0" FontSize="11" Foreground="#666"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
